{% extends 'base.twig' %}
{% block title %}Categories list{% endblock %}

{% block content %}
    <h1>
        Categories list
    </h1>
    <p>
    <a href="{{ url('/categories/add') }}" title="Add category">
            Add products
        </a>
    </p>
    {%  if products|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nazwa</th>
                    <th colspan="2">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id|e }}</td>
                    <td>{{ product.name|e }}</td>
                    <td>
                        <a href="{{ url('/categories/delete', {'id': product.id}) }}" title="Delete">Delete product</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            Products not found.
        </p>
    {% endif %}
{% endblock %}