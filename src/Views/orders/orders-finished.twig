{% extends 'base.twig' %}
{% block title %}Products list{% endblock %}

{% block content %}
    <h1>
        Products list
    </h1>
    <p>
    {%  if products|length > 0 %}
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Cena netto</th>
                    <th>Cena brutto</th>
                    <th>Opis</th>
                    <th colspan="2">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name|e }}</td>
                    <td>{{ product.price_netto|e }}</td>
                    <td>{{ product.price_brutto|e }}</td>
                    <td>{{ product.desc|e }}</td>
                 </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
        <p>
            Products not found.
        </p>
    {% endif %}
     {%  if orders|length > 0 %}
     <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Ulica</th>
                    <th>Numer domu</th>
                    <th>Kod pocztowy</th>
                    <th>Miasto</th>
                    <th colspan="2">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.street|e }}</td>
                    <td>{{ order.house_number|e }}</td>
                    <td>{{ order.postal_code|e }}</td>
                    <td>{{ order.city|e }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
{% endblock %}