{% extends 'base.twig' %}
{% block title %}Products list{% endblock %}

{% block content %}
    <h1>
        Products list
    </h1>
    <p>
        {%  if products|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Cena netto</th>
                    <th>Cena brutto</th>
                    <th>Opis</th>
                    <th colspan="2">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name|e }}</td>
                    <td>{{ product.price_netto|e }}</td>
                    <td>{{ product.price_brutto|e }}</td>
                    <td>{{ product.desc|e }}</td>
                    <td>
                        <a href="{{ url('/cart/delete', {'id': product.id}) }}" title="Delete product">Delete product</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            No products added to cart. Check our <a href="{{ url('/products/') }}" title="products">products.</a>
        </p>
    {% endif %}
    <a href="{{ url('/cart/finish') }}" title="Delete product">Finish your order</a>
{% endblock %}